%html{:dir => "ltr", :lang => "en-US", class: "fluid top-full sticky-top"}
  %head
    %link{href: "/assets/img/Vanamo_Logo.png", rel: "shortcut icon"}
    %meta{charset: "UTF-8"}
    %meta{content: "width=device-width, initial-scale=1.0, user-scalable=0, minimum-scale=1.0, maximum-scale=1.0", name: "viewport"}
    %meta{content: "yes", name: "apple-mobile-web-app-capable"}
    %meta{content: "black", name: "apple-mobile-web-app-status-bar-style"}
    %meta{content: "IE=9; IE=8; IE=7; IE=EDGE", "http-equiv" => "X-UA-Compatible"}

    %title
      Forgot Password
    = analytics_init
    = stylesheet_link_tag "application", :media => "all"
    :javascript
      var basePath = '',
        commonPath = 'assets/',
        rootPath = '../',
        DEV = false,
        componentsPath = 'assets/';
      var primaryColor = '#4a8bc2',
        dangerColor = '#b55151',
        successColor = '#609450',
        warningColor = '#ab7a4b',
        inverseColor = '#45484d';
      
      var themerPrimaryColor = primaryColor;
    = csrf_meta_tag
    = javascript_include_tag "application"

  %body.forgot
    #forgot
      .container
        .wrapper      
          .widget.widget-heading-simple.widget-body-white
            .widget-header
              %h2.center
                = t('devise.forgot_password.title')
                
            .widget-body
              Enter your email address and you will receive a link to create a new password via email.
              %p
              %form#send_forgot_password
                .form-group
                  .row
                    %label.col-sm-4.control-label{:for => "email"}
                      Email Address *
                    .col-sm-8
                      %input#email_address.form-control{type: "email", autofocus: "true", name: "email_address"}

                .form-group.center
                  %button{type: "submit", class: "btn btn-icon btn-primary"}
                    Submit
                    
                  / %input{:type=>"button",:value=> "Cancel", :class=>"btn btn-icon btn-default" ,:onclick=>"window.location = '#{root_url}'"}
    = render 'notification' 
= javascript_include_tag "user"
:javascript
  var g_token = '#{form_authenticity_token}';
  var g_newPasswordPath = '#{user_password_path}'
  var g_displayLength = #{Settings.per_page};
  $(document).ready(function(){
    $("#jMenu").jMenu();
  })