- provide(:title, 'Performance Appraisal')
= javascript_include_tag "views/users/pa"
#performance_appraisal
  .widget.widget-heading-simple.widget-body-white
    .widget-body
      .row
        .col-md-3
          .innerAll.border-bottom
            / Profile Photo
            %a{href: ""}
              %img.center.img-responsive.img-clean{src: "/assets/img/avatar.jpg" }
            .center
              .btn-group
                %a.btn.btn-primary{href: ""}
                  %i.fa.fa-plus.fa-fw
                  Upload Photo

        .col-md-5
          .row
            .col-md-12
              %h2
                = @user.full_name

          .row
            .col-md-12
              %h4
                Current Title: 
                = @current_title

          .row
            .col-md-12
              .tabsbar.tabsbar-2
                %ul.row.row-merge
                  %li.col-md-3.glyphicons.circle_info
                    %a.center{"data-toggle" => "tab", href: "#tab1-3"}
                      %span About
                  %li.col-md-4.glyphicons.cart_in.active
                    %a.center{"data-toggle" => "tab", href: "#tab2-3"}
                      %span Timeline
                  %li.col-md-5.glyphicons.pencil
                    %a.center{"data-toggle" => "tab", href: "#tab3-3"}
                      %span Performance Appraisal


        .col-md-4 
          - @competencies.each do |c|
            .row
              .col-md-3
                = c.name
              .row.col-md-9
                .col-md-12
                  - c.levels.each do |l|
                    - l.slots.each do |sl|
                      %span.slot
                    .slot-span

            %br

  .widget.widget-heading-simple.widget-body-white
    .widget-body
      .tab-content
        #tab1-3.tab-pane
          = render partial: 'users/about'

        #tab2-3.tab-pane.active
          = render partial: 'users/timeline'

        #tab3-3.tab-pane
          = render partial: 'users/pa'