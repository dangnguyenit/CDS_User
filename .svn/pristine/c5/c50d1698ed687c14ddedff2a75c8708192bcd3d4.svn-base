/* Author: DangNH*/

.popover.fade {
  z-index:-1;
}

.popover.fade.in {
  z-index:2;
}

/* Create Align content*/
.right-algin-content {
	text-align: right;
	float: right;
}

.left-algin-content {
	text-align: left;
	float: left;
}

/* Customize Css for Twitter Bootstraps Popover */
.popover.fade.bottom.in {
	width: 500px;
}

.popover {
  max-width: 500px;
  width: auto;
}

/* Make Description and Guiline is scrollable in Slot Details*/
.popover.fade.bottom.in #description-scroll {
	max-height: 100px;
	overflow-y: auto;
}

.popover.fade.bottom.in #guideline-scroll {
	max-height: 250px;
	overflow-y: auto;
}

/* Customize evidences list in Recently Added */
#recently_added #evidences {
	width: 50%; 
	float: left;
	padding: 0 7.5px
}

#recently_added {
	max-height: 800px;
	/*overflow-y: auto; */
}

/* Custimize for description & score in Recently Added for many words */
#recently_added #description {
	overflow: hidden;
	white-space: nowrap;
	text-overflow: ellipsis;
	-o-text-overflow: ellipsis;
}

#recently_added #score, #slot_detail_popover #score {
	overflow: hidden;
	white-space: nowrap;
	text-overflow: ellipsis;
	-o-text-overflow: ellipsis;
}

#performance_appraisal .slot-span {
	height: 10px; 
	width: 10px; 
	margin-right: 0px; 
	max-height: 10px; 
	font-size: 1px; 
	float: left; 
	background-color: white; 
	border: 0px solid #999;
}

#performance_appraisal .slot {
	height: 10px; 
	width: 20px; 
	margin-right: 0px; 
	max-height: 10px; 
	font-size: 1px; 
	float: left; 
	background-color: white; 
	border: 1px solid #999;
}

.pentagon {
	-ms-transform: rotate(30deg); /* IE 9 */
	-webkit-transform: rotate(0deg); /* Chrome, Safari, Opera */
	transform: rotate(30deg);
	width: 100%;
	border-bottom: 30px solid #6C6;
	border-left: 30px solid transparent;
	border-right: 30px solid transparent;
}

/* Edit color for widget other subject*/
#current_status .widget_other_subject .widget-head {
	background-image: linear-gradient(to bottom, #44A6F3, #5885F8);
}

#current_status .widget_other_subject .widget-head .heading {
	color: white;
}

/* Edit size for widget other subject */
#current_status .widget_other_subject {
	margin-right: 1.5%;
	margin-left: 1.5%;
	padding-right: 0px;
	padding-left: 0px;
}

/* Edit size for tabs in Performace Appraisal Tab */
#performance_appraisal #current_status_tab, #performance_appraisal #recently_added_tab, #performance_appraisal #all_slot_tab, #performance_appraisal #all_other_tab, #performance_appraisal #short_term_tab {
	width: 20%;
}

/* Customize for Menu Left */
#content .left-align{
	text-align: left;
	float: left;
}

#content .right-align{
	text-align: right;
	float: right;
}

/* Customize search textbox in Left Menu*/
#content #search {
	margin-top: 8px;
	width: 100%;
}

#content #search .input-group-addon{
	padding: 6px 12px;
	font-size: 14px;
	font-weight: normal;
	line-height: 1;
	color: #555555;
	text-align: center;
	background-color: white;
	border: 0px solid white;
	border-radius: 0px;
}


/* Customize Header Datatable */
.ui-state-default, .show_details {
	cursor: pointer;
}

a {
	cursor: pointer;
}

/* Remove padding for search textbox datatable */
.col-md-12.form-horizontal .dataTables_filter.form-group.margin-none .col-md-5 {
	padding-right: 0px;
}
/*Some customize for screen */
input[type='checkbox'], input[type='radio'] {  
  width: 17px;
  height: 20px;
  padding: 0 5px 0 0;
  display: block;
  clear: left;
  float: left;

  padding-left: 22px;
  display: inline-block;
  line-height: 17px;
  background-repeat: no-repeat;
  background-position: 0 0;
  font-size: 15px;
  vertical-align: middle;
  cursor: pointer;
} 
.error {
	color: red;
}

/* Resize for login page */
#login .container {
	margin-left: 35%;
	margin-right: 35%;
	width: 30%;
}

#login .wrapper {
	width: 100%;
}

/* Resize for forgot password page */
#forgot .container, #reset .container {
	margin-left: 30%;
	margin-right: 30%;
	width: 40%;
}

#forgot .wrapper{
	width: 100%;
}
/* Fix width for drop down table */
#content .dropdown-menu.pull-left.fix_width {
	width: 235px;
}
/* Make the max width of text in table cell*/
table.display td {
	overflow: hidden;
	white-space: nowrap;
	text-overflow: ellipsis;
	-o-text-overflow: ellipsis;
	max-width: 400px;
}

/* Set Cursor for button add on*/
.input-group-addon {
	cursor: pointer;
}

/*Align top for bootbox confirm*/
.bootbox.modal {
	top: 40%;
}

/* Disable scroll in modal pop-up*/
.modal {
	overflow-y: hidden;
}

/* Resize Modal*/
#edit_member_list {
	width: 65%;
}

#edit_user_group_modal, #new_user_group_modal, #edit_realtionship, #select_team_leader, #select_template, #select_manager	 {
	width: 50%;
}

#new_user_modal, #edit_user_modal, #new_user_relationship_modal, #new_term_modal, #edit_term_modal, #notification_modal, #slot_detail_popover {
	width: 40%;
}

 /* End */

/* Align right for groups of button in Index page*/
.button_group_right {
	text-align: right;
  float: right;
  margin-bottom: 1%
}

/* Customize for "Create Relationship Pop-up*/
#new_user_relationship_modal .col-sm-9 {
	padding-right: 0px;
}

#new_user_relationship_modal #select_manager {
	border-radius: 0px;
}

#new_user_relationship_modal input[type="text"] {
  background-color: white;
}
/* End

/* Customize for "Create/ Edit Term Pop-up*/
#new_term_modal input[type='text'] {
	background-color: white;
}

#edit_term_modal input[type='text'] {
	background-color: white;
}
/* End */

/* Customize for "Create/ Edit Department Pop-up*/
#departments_general input[type="text"] {
  background-color: white;
}

/* Hanlde when have a lot of permission in Create Role Pop up*/
.modal-body {
	max-height: 550px;
	overflow-y: auto;
}

#new_user_group_modal .modal-body, #edit_user_group_modal .modal-body {
	max-height: 700px;
	overflow-y: auto;
}
 /*End */

/* Align 'Forgot Password' link */
#login .right_align {
	text-align: right;
	float: right;
}

body.forgot, body.reset {
	background: #f0f0f0;
}

#reset .progress {
	margin-top: 3%;
}