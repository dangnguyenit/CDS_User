/* Customize for notification dropdown */
#notification_cmt, #notification_reject, #notification_approve {
	width: 600px;
	max-height: 500px;
	height: 500px;
	overflow-y: auto;
}


#notification_cmt li, #notification_reject li, #notification_approve li {
	border-bottom: solid 1px #ddd;
	border-bottom: solid 1px rgba(100, 100, 100, .22);
	-webkit-background-clip: padding-box;
	z-index: 100;
	position: relative;
	padding: 8px 8px 6px 8px;
	background-color: #fff;
	-webkit-border-top-left-radius: 3px;
	-webkit-border-top-right-radius: 3px;
}

#notification_cmt a, #notification_reject a, #notification_approve a{
	text-decoration: none;
	color: #4778be;
	font-weight: bold; 
}

/* Create Align content*/
.right-algin-content {
	text-align: right;
	float: right;
}

.left-algin-content {
	text-align: left;
	float: left;
}

/* Recently Not Added Slot */
#recently_not_added_slot img {
	opacity: 0.7;
}

#recently_not_added_slot img:hover {
	opacity: 1;
}

/* Color for wigget Recently Not Added Slot */
#recently_not_added_slot #recently_added_box, #recently_not_added_slot #not_added_box {
	background-color: #f5f5f5;
}

/* Other Subject Detail*/
/* Slot Detail */
#slot_detail .hide_upload_photo, #other_subject_detail .hide_upload_photo {
	display: none;
}

#slot_detail .col-md-5, #other_subject_detail .col-md-5 {
	overflow: hidden;
	white-space: nowrap;
	text-overflow: ellipsis;
	-o-text-overflow: ellipsis;
}

#slot_detail .silder, #other_subject_detail .silder {
	width: 1.4%;
	background-color: white;
	overflow: visible !important;
	bottom: 0;
	z-index: 1000;
	float: left;
	position: fixed;
	left: 0;
	top: 20%;
	overflow: hidden;
	height: 65%; 
	min-height: 65%;

	background-color: #f9f9f9;
	background-image: -moz-linear-gradient(top, #fdfdfd, #f4f4f4);
	background-image: -webkit-gradient(linear, 0 0, 0 100%, from(#fdfdfd), to(#f4f4f4));
	background-image: -webkit-linear-gradient(top, #fdfdfd, #f4f4f4);
	background-image: -o-linear-gradient(top, #fdfdfd, #f4f4f4);
	background-image: linear-gradient(to bottom, #fdfdfd, #f4f4f4);
	background-repeat: repeat-x;
	filter: progid:DXImageTransform.Microsoft.gradient(startColorstr='#fffdfdfd', endColorstr='#fff4f4f4', GradientType=0);
	border-bottom: 1px solid #dbdbdb;
	-webkit-border-radius: 5px 5px 0 0;
	-moz-border-radius: 5px 5px 0 0;
	border-radius: 5px 5px 0 0;
	padding: 10% 2px 0 0;
}

#slot_detail .silder .text, #other_subject_detail .silder .text{
	transform:rotate(90deg);
	-ms-transform:rotate(90deg); /* IE 9 */
	-webkit-transform:rotate(90deg); /* Opera, Chrome, and Safari */
}

#slot_detail #recently_added_slider, #other_subject_detail #recently_added_slider {
	width: 15%;
	background-color: white;
	overflow: visible !important;
	bottom: 0;
	z-index: 1000;
	float: left;
	position: fixed;
	left: 0;
	top: 20%;
	overflow: hidden;
	height: 65%; 
	min-height: 65%;
	display: none;
}

#other_subject_detail .text{
	width: 200px;
	padding-top: 175px;
}

#recently_added_slider .widget {
	height: 100%;
}

