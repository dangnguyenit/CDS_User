= form_for(@level) do |f|
  - if @level.errors.any?
    #error_explanation
      %h2="#{pluralize(@level.errors.count, "error")} prohibited this competency from being saved:"
      %ul
        - @level.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    = f.text_field :name
  - if @competency
    .field
      = f.label :competency
      = @competency.name
    .field
      = f.hidden_field :competency_id, value: @competency.id
  .actions
    = f.submit 'Save'