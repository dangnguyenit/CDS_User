#new_user_modal.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "myModalLabel", role: "dialog", tabindex: "-1"}
  .modal-content
    .modal-header
      %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", type: "button"} Ã—
      %h3#modalLabel
    %form#new_user_pop_up
      .modal-body
        .widget.widget-heading-simple.widget-body-white
          .widget-body
            .form-group
              .row
                .col-sm-3
                  %label.control-label{:for => "full_name"}
                    Full Name *
                .col-sm-9
                  %input#full_name.form-control{name: "full_name", type: "text", autofocus: "", placeholder: "#{t('users.new_pop_up.full_name')}", tabindex: "1"}

            .form-group
              .row
                .col-sm-3
                  %label.control-label{:for => "password"}
                    Password *
                .col-sm-9
                  %input#password.form-control{name: "password", type: "password", autofocus: "", placeholder: "#{t('users.new_pop_up.password')}", tabindex: "2"}
            .form-group
              .row
                .col-sm-3
                  %label.control-label{:for => "password_confirmation"}
                    Confirmation Password *
                .col-sm-9
                  %input#password_confirmation.form-control{name: "password_confirmation", type: "password", autofocus: "", placeholder: "#{t('users.new_pop_up.confir_pass')}", tabindex: "3"}

            .form-group
              .row
                .col-sm-3
                  %label.control-label{:for => "email_address"}
                    Email Address *
                .col-sm-9
                  %input#email_address.form-control{name: "email_address", type: "text", placeholder: "Email Address", tabindex: "4"}

            .form-group
              .row
                .col-sm-3
                  %label.control-label{:for => "employee_id"}
                    Employee ID *
                .col-sm-9
                  %input#employee_id.form-control{name: "employee_id", type: "text", placeholder: "Employee ID", tabindex: "5"}
            
            .form-group
              .row
                .col-sm-3
                  %label.control-label{:for => "career_path"}
                    Career Path *
                .col-sm-9
                  %select#career_path.form-control{tabindex: "6"}
                    %option{value: "management"}
                      Management
                    %option{value: "technique"}
                      Technique

            .form-group
              .row
                .col-sm-3
                  %label.control-label{:for => "role"}
                    Role *
                .col-sm-9
                  %select#role.form-control{tabindex: "7"}
                    = groups.each do |group|
                      %option{value: "#{group.id}"}
                        = group.name

            .form-group
              .row
                .col-sm-3
                  %label.control-label{:for => "status"}
                    Status *
                .col-sm-9
                  %select#status.form-control{tabindex: "8"}
                    %option{value: "true"}
                      Active
                    %option{value: "false"}
                      Inactive
              
        .modal-footer.center
          .control-group.center
            %button#create-user.btn.btn-icon.btn-primary.glyphicons.circle_ok{type: "submit", tabindex: "9", value: "create"}
              = t('button.create')
              %i
            %button.btn.btn-icon.btn-default.glyphicons.circle_remove{type: "button" , "data-dismiss" => "modal", tabindex: "10"}
              = t('button.cancel')
              %i
