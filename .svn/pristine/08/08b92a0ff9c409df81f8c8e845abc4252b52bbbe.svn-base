%html{:dir => "ltr", :lang => "en-US", class: "fluid top-full sticky-top"}
  %head
    %meta{charset: "UTF-8"}
    %meta{content: "width=device-width, initial-scale=1.0, user-scalable=0, minimum-scale=1.0, maximum-scale=1.0", name: "viewport"}
    %meta{content: "yes", name: "apple-mobile-web-app-capable"}
    %meta{content: "black", name: "apple-mobile-web-app-status-bar-style"}
    %meta{content: "IE=9; IE=8; IE=7; IE=EDGE", "http-equiv" => "X-UA-Compatible"}

    %title
      Forgot Password
    = analytics_init
    = stylesheet_link_tag "application", :media => "all"
    :javascript
      var basePath = '',
        commonPath = 'assets/',
        rootPath = '../',
        DEV = false,
        componentsPath = 'assets/';
      var primaryColor = '#4a8bc2',
        dangerColor = '#b55151',
        successColor = '#609450',
        warningColor = '#ab7a4b',
        inverseColor = '#45484d';
      
      var themerPrimaryColor = primaryColor;
    = csrf_meta_tag
    = javascript_include_tag "application"


  %body.reset
    #reset
      .container
        .wrapper      
          .widget.widget-heading-simple.widget-body-white
            .widget-header
              %h2.center
                = t('devise.forgot_password.change_your_password')

            .widget-body
              .new_form.small_format
                = form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => {id: "dangnh", :method => :put }) do |f|
                  = devise_error_messages!
                  = f.hidden_field :reset_password_token
                  
                  .form-group
                    .row
                      %label.col-sm-4.control-label{:for => "password"}
                        New Password *
                      .col-sm-8
                        = f.password_field :password, :autofocus => "true", class: "form-control"
                    #messages
                  .form-group
                    .row
                      %label.col-sm-4.control-label{:for => "password_confirmation"}
                        Password Confirmation *
                      .col-sm-8
                        = f.password_field :password_confirmation, class: "form-control"
                  .form-group.center
                    = f.submit "Save", class: "btn btn-icon btn-primary"
                
= javascript_include_tag "user"
= javascript_include_tag "views/users/password_strength"
:javascript
  var g_displayLength = #{Settings.per_page};
  $(document).ready(function(){
    $("#jMenu").jMenu();
  })

