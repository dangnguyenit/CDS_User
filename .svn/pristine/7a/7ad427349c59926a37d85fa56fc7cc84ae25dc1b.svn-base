= form_for(@slot) do |f|
  - if @slot.errors.any?
    #error_explanation
      %h2
        = pluralize(@slot.errors.count, "error")
        prohibited this slot from being saved:
      %ul
        - @slot.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :description
    = f.text_area :description
  - if @level
    .filed
      = f.label :level_id
      = @level.name
    .field
      = f.hidden_field :level_id, value: @level.id
  .actions
    = f.submit