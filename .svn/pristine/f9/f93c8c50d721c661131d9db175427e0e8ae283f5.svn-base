#slot_detail_popover{style: "display: none;"}
  .row
    .col-md-2
      %img.center.img-responsive.img-clean{style: "width: 50px; height: 50px", src: "/assets/img/images.jpg" }
    .col-md-4
      #name
      %strong
        #competency
    .col-md-6
      .content{style: "float:right; text-align: right;"}
        #score
          #score_description
          #scoring
  .separator.bottom      
  .widget.widget-heading-simple.widget-body-white
    .widget-head
      %h2.heading
        = t('users.slot_details.description')
    #description-scroll.widget-body
      #description_details

  .widget.widget-heading-simple.widget-body-white
    .widget-head
      %h2.heading
        = t('users.slot_details.guideline')
    #guideline-scroll.widget-body
      #guideline
