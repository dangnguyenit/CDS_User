= javascript_include_tag "views/departments/select_templates"
#select_template.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "myModalLabel", role: "dialog"}
  .modal-content
    .modal-header
      %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", type: "button"} ×
      %h3#modalLabel
    .modal-body
      .widget.widget-heading-simple.widget-body-white
        .widget-head
          %h4.heading
            = t('departments.select.list_templates')
        .widget-body
          %table#select_template_table.dynamicTable.table.table-striped.table-primary.table-vertical-center.checkboxs.dataTable
        .span2.center{align: "center"}
    .modal-footer
      .control-group.center
        %button.btn.btn-icon.btn-primary.glyphicons.circle_ok{type: "button",  tabindex: "1", onclick: "SelectTemplate.setCdsTemplate()"}
          = t('button.ok')
          %i>
          
        %button.btn.btn-icon.btn-default.glyphicons.circle_remove{type: "button" ,"data-dismiss" => "modal", tabindex: "2"}
          = t('button.cancel')
          %i>