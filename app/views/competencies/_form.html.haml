= form_for @competency do |f|
  - if @competency.errors.any?
    #error_explanation
      %h2= "#{pluralize(@competency.errors.count, "error")} prohibited this competency from being saved:"
      %ul
        - @competency.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .actions
    = f.submit 'Save'
