/ .relativeWrap
/ .box-generic
/   / Tabs Heading
.tabsbar.tabsbar-2
  %ul.row.row-merge
    %li#current_status_tab.second.active
      %a.center{"data-toggle" => "tab", href: "#tab1-5", onclick: "UserPA.render_current_status(user_id);"}
        %span.strong Current Status
        
    %li#recently_added_tab.second
      %a.center{"data-toggle" => "tab", href: "#tab2-5", onclick: "UserPA.render_recently_added(user_id);" }
        %span.strong Recently Added

    %li#all_slot_tab.second
      %a.center{"data-toggle" => "tab", href: "#tab3-5", onclick: "UserPA.render_all_slot(user_id);"}
        %span.strong All Slots
        = @slots.count

    %li#all_other_tab.second
      %a.center{"data-toggle" => "tab", href: "#tab4-5", onclick: "UserPA.render_all_other_subject(user_id);"}
        %span.strong All Other Subjects
        = @other_subjects.count

    %li#short_term_tab.second
      %a.center{"data-toggle" => "tab", href: "#tab5-5", onclick: "UserPA.render_short_term_objective(user_id);"}
        %span.strong Short-Term Objectives

.tab-content
  #tab1-5.tab-pane.second.active
    #loading_img_current.row.center{style: "display: none"}
      %img{src: "/assets/img/facebook_lo.gif", style: "width: 35px; height: 35px;"}

    #current_status
    / =render partial: 'users/current_status'

  #tab2-5.tab-pane.second
    #loading_img_recently.row.center{style: "display: none"}
      %img{src: "/assets/img/facebook_lo.gif", style: "width: 35px; height: 35px;"}

    #recently_added

  #tab3-5.tab-pane.second

    #select_type.row{style: "display: none"}
      %select.selectpicker.col-md-12{onchange: "UserPA.select_slot_type(#{@user.id}, this)"}
        %option{value: "all_slots"}
          All Slots
        %option{value: "passed_slots"}
          Passed Slots
        %option{value: "not_passed_slots"}
          Not Passed Slots
        %option{value: "not_assessed_yet_slots"}
          Not Assessed Yet Slots
        %option{value: "not_added_slots"}
          Not Added Slots
    %br
    #loading_img_all_slot.row.center{style: "display: none"}
      %img{src: "/assets/img/facebook_lo.gif", style: "width: 35px; height: 35px;"}
    
    #all_slot
      
    
  #tab4-5.tab-pane.second
    #loading_img_all_other.row.center{style: "display: none"}
      %img{src: "/assets/img/facebook_lo.gif", style: "width: 35px; height: 35px;"}

    #all_other_subject

  #tab5-5.tab-pane.second
    #loading_img_short_term_obj.row.center{style: "display: none"}
      %img{src: "/assets/img/facebook_lo.gif", style: "width: 35px; height: 35px;"}

    #short_term_objective