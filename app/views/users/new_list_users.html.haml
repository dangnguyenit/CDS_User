.row
  .col-md-6
    = form_tag import_users_organization_users_path(current_user.organization_id), :method => :post, multipart: true, :class => 'import_users form-horizontal margin-none' do
      
      .fileupload.fileupload-new.margin-none{"data-provides" => "fileupload"}
        .input-append
          .uneditable-input.span3
            %i.icon-file.fileupload-exists
            %span.fileupload-preview
          %span.btn.btn-default.btn-file
            %span.fileupload-new
              = t('users.new_list_users.select_file')
            %span.fileupload-exists
              = t('users.new_list_users.change')
            %input.margin-none{:type => "file", name: "upload"}/
          %a.btn.fileupload-exists{"data-dismiss" => "fileupload", :href => "#"}
            = t('users.new_list_users.remove')

      %br

      .form-actions
        %button.btn.btn-icon.btn-primary.glyphicons.circle_ok{:type => "submit"}
          %i>
            = t('users.new_list_users.import_user')
        %a.btn.btn-icon.btn-default.glyphicons.circle_remove
          %i>
            = t('users.new_list_users.cancel')